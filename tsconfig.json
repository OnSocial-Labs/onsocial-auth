{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "lib",
    "paths": {
      "components/*": ["src/components/*"],
      "context/*": ["src/context/*"],
      "wallet/*": ["src/wallet/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
